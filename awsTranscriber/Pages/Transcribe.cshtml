@page
@model awsTranscriber.Pages.TranscribeModel
@{
    ViewData["Title"] = "Transcribe";
}

<h2>Transcribe</h2>


<form method="post" class="panel panel-login" enctype="multipart/form-data">
    @if (!string.IsNullOrWhiteSpace(Model.Error))
    {
        <div class="alert alert-danger alert-dismissable show">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            @Model.Error
        </div>
    }
    <div class="form-group">
        <div class="col-md-3 ">
            <label>Select File</label>
            <input type="file" asp-for="Image" class="form-control" accept="audio/x-wav,audio/mpeg" />
        </div>
        <div class="col-md-3 ">
            <label> </label>
            <input type="submit" class="btn-primary form-control" value="Transcribe" />
        </div>
        <div class="col-md-6 ">
            <label>Transcribed Text</label>
            <textarea class="form-control" cols="10" rows="10">@Model.TranscribedText</textarea>
        </div>
    </div>
</form>
